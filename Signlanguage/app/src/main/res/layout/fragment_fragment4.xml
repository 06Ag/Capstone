<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment4">

    <!-- 사람 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/layout_ggun"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_ggun"
                    style="@style/CustomImageView"
                    android:src="@drawable/ggun" />

                <TextView
                    android:id="@+id/txt_ggun"
                    style="@style/CustomTextView"
                    android:text="꾼" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_champion"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_champion"
                    style="@style/CustomImageView"
                    android:src="@drawable/champion" />

                <TextView
                    android:id="@+id/txt_champion"
                    style="@style/CustomTextView"
                    android:text="챔피언" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_gentleman"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_gentleman"
                    style="@style/CustomImageView"
                    android:src="@drawable/gentleman" />

                <TextView
                    android:id="@+id/txt_gentleman"
                    style="@style/CustomTextView"
                    android:text="신사" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_kid"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_kid"
                    style="@style/CustomImageView"
                    android:src="@drawable/kid" />

                <TextView
                    android:id="@+id/txt_kid"
                    style="@style/CustomTextView"
                    android:text="꼬마" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_orphan"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_orphan"
                    style="@style/CustomImageView"
                    android:src="@drawable/orphan" />

                <TextView
                    android:id="@+id/txt_orphan"
                    style="@style/CustomTextView"
                    android:text="고아" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_you"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_you"
                    style="@style/CustomImageView"
                    android:src="@drawable/you" />

                <TextView
                    android:id="@+id/txt_you"
                    style="@style/CustomTextView"
                    android:text="녀석" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_wife"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_wife"
                    style="@style/CustomImageView"
                    android:src="@drawable/wife" />

                <TextView
                    android:id="@+id/txt_wife"
                    style="@style/CustomTextView"
                    android:text="아내" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_customer"
                style="@style/CustomLinearLayout_ver">

                <ImageView
                    android:id="@+id/image_customer"
                    style="@style/CustomImageView"
                    android:src="@drawable/customer" />

                <TextView
                    android:id="@+id/txt_customer"
                    style="@style/CustomTextView"
                    android:text="손님" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_woman"
                style="@style/CustomLinearLayout_ver">

                <ImageView
                    android:id="@+id/image_woman"
                    style="@style/CustomImageView"
                    android:src="@drawable/woman" />

                <TextView
                    android:id="@+id/txt_woman"
                    style="@style/CustomTextView"
                    android:text="여자" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_man"
                style="@style/CustomLinearLayout_ver">

                <ImageView
                    android:id="@+id/image_man"
                    style="@style/CustomImageView"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/txt_man"
                    style="@style/CustomTextView"
                    android:text="남자" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_teacher"
                style="@style/CustomLinearLayout_ver">

                <ImageView
                    android:id="@+id/image_teacher"
                    style="@style/CustomImageView"
                    android:src="@drawable/teacher" />

                <TextView
                    android:id="@+id/txt_teacher"
                    style="@style/CustomTextView"
                    android:text="선생님" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_slave"
                style="@style/CustomLinearLayout_ver">
                <ImageView
                    android:id="@+id/image_slave"
                    style="@style/CustomImageView"
                    android:src="@drawable/slave" />

                <TextView
                    android:id="@+id/txt_slave"
                    style="@style/CustomTextView"
                    android:text="노예" />
            </LinearLayout>

        </GridLayout>
    </ScrollView>

</LinearLayout>